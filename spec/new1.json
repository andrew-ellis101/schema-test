{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Person",
    "type": "object",
    "properties": {
        "fullName": {
            "type": "string",
            "description": "The person's name."
        },
        "age": {
            "type": "integer",
            "description": "The person's age."
        },
        "email": {
            "type": "string",
            "format": "email",
            "description": "The person's email address."
        }
    },
    "required": ["name", "age", "email"]
}
